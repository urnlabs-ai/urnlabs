# =============================================================================
# URNLABS AI PLATFORM - UNIFIED ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# This configuration supports both Node.js services and Go urn-maestro integration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/urnlabs_dev
POSTGRES_DB=urnlabs_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-replace-in-production

# =============================================================================
# SERVICE PORTS & ENDPOINTS
# =============================================================================
# Node.js Services
API_PORT=3000
AGENT_SERVICE_PORT=3001
BRIDGE_PORT=3002
DASHBOARD_PORT=3003

# Go urn-maestro Service
URN_HTTP_PORT=8081
URN_MCP_PORT=8082

# Internal Service Communication
NODE_API_ENDPOINT=http://localhost:3000
NODE_AGENT_ENDPOINT=http://localhost:3001
URN_MAESTRO_ENDPOINT=http://localhost:8081
BRIDGE_ENDPOINT=http://localhost:3002

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Claude (Anthropic)
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-claude-api-key-here

# OpenAI (for compatibility)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_API_KEY=your-gemini-api-key-here

# Qwen (Alibaba Cloud)
QWEN_API_KEY=sk-your-qwen-api-key-here
DASHSCOPE_API_KEY=sk-your-qwen-api-key-here

# =============================================================================
# VERSION CONTROL & PROJECT MANAGEMENT
# =============================================================================
# GitHub
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_PAT=ghp_your-github-personal-access-token

# GitLab
GITLAB_PAT=glpat-your-gitlab-token

# Bitbucket
BITBUCKET_USERNAME=your-bitbucket-username
BITBUCKET_APP_PASSWORD=your-bitbucket-app-password

# Atlassian (Jira & Confluence)
ATLASSIAN_EMAIL=your-email@company.com
JIRA_PAT=your-jira-personal-access-token
CONFLUENCE_PAT=your-confluence-personal-access-token

# =============================================================================
# CLOUD PROVIDERS
# =============================================================================
# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Google Cloud Platform
GCP_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Microsoft Azure
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# =============================================================================
# COMMUNICATION & NOTIFICATIONS
# =============================================================================
# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-teams-webhook

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook

# PagerDuty
PAGERDUTY_TOKEN=your-pagerduty-api-token
PAGERDUTY_ROUTING_KEY=your-pagerduty-routing-key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus & Grafana
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# Datadog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# New Relic
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Jaeger (Distributed Tracing)
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# HashiCorp Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token

# SonarQube
SONAR_HOST_URL=http://localhost:9000
SONAR_TOKEN=your-sonar-token

# Snyk Security
SNYK_TOKEN=your-snyk-token

# =============================================================================
# URN-MAESTRO SPECIFIC CONFIGURATION
# =============================================================================
# Enhanced Mode
URN_ENHANCED_MODE=true

# Logging
URN_LOG_LEVEL=info
URN_LOG_FORMAT=json

# Database Path (for BadgerDB)
URN_DATABASE_PATH=/data/urn-maestro.db

# Performance Settings
URN_MAX_WORKERS=10
URN_CACHE_TTL=3600
URN_TIMEOUT_SECONDS=300

# Agent Configuration
URN_AGENT_TIMEOUT=600
URN_MAX_CONCURRENT_AGENTS=5

# Cost Optimization
URN_ENABLE_COST_TRACKING=true
URN_MONTHLY_BUDGET_LIMIT=100.00
URN_COST_ALERT_THRESHOLD=80.00

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
NODE_ENV=development
URN_ENV=development

# Test Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/urnlabs_test
RUN_E2E_TESTS=false

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false

# =============================================================================
# PRODUCTION OVERRIDES (uncomment and modify for production)
# =============================================================================
# NODE_ENV=production
# URN_ENV=production
# URN_LOG_LEVEL=warn
# DEBUG=false
# DATABASE_URL=postgresql://user:password@prod-db:5432/urnlabs_prod
# REDIS_URL=redis://prod-redis:6379
# JWT_SECRET=your-super-secure-production-jwt-secret-replace-this