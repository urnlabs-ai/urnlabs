# =============================================================================
# URNLABS AI PLATFORM - DEVELOPMENT ENVIRONMENT
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/urnlabs_dev
POSTGRES_DB=urnlabs_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-for-development-only

# =============================================================================
# SERVICE PORTS & ENDPOINTS
# =============================================================================
API_PORT=7001
AGENT_SERVICE_PORT=7002
BRIDGE_PORT=7003
DASHBOARD_PORT=7004

# Go urn-maestro Service
URN_HTTP_PORT=7005
URN_MCP_PORT=7015

# Internal Service Communication
NODE_API_ENDPOINT=http://api:7001
NODE_AGENT_ENDPOINT=http://agents:7002
URN_MAESTRO_ENDPOINT=http://urn-maestro:7005
BRIDGE_ENDPOINT=http://bridge:7003

# =============================================================================
# AI PROVIDER CONFIGURATION (OPTIONAL - System works without these)
# =============================================================================
CLAUDE_API_KEY=your-claude-api-key-here
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=
GOOGLE_API_KEY=
QWEN_API_KEY=
DASHSCOPE_API_KEY=

# =============================================================================
# VERSION CONTROL & PROJECT MANAGEMENT (OPTIONAL)
# =============================================================================
GITHUB_TOKEN=your-github-token-here
GITHUB_PAT=
GITLAB_PAT=
JIRA_PAT=
CONFLUENCE_PAT=

# =============================================================================
# COMMUNICATION & NOTIFICATIONS (OPTIONAL)
# =============================================================================
SLACK_BOT_TOKEN=your-slack-bot-token-here
SLACK_APP_TOKEN=your-slack-app-token-here
SLACK_TEAM_ID=your-slack-team-id-here
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
DISCORD_BOT_TOKEN=
DISCORD_WEBHOOK_URL=

# =============================================================================
# URN-MAESTRO SPECIFIC CONFIGURATION
# =============================================================================
URN_ENHANCED_MODE=true
URN_LOG_LEVEL=info
URN_LOG_FORMAT=json
URN_DATABASE_PATH=/data/urn-maestro.db
URN_MAX_WORKERS=10
URN_CACHE_TTL=3600
URN_TIMEOUT_SECONDS=300

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
URN_ENV=development
DEBUG=false
VERBOSE_LOGGING=true