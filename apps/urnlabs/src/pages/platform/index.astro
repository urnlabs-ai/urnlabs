---
import BaseLayout from '~/layouts/BaseLayout.astro';

const platformFeatures = [
  {
    title: "UrnFlow",
    description: "Orchestrate complex workflows with deterministic DAG execution. Visual flow builder with real-time monitoring.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23-.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.611L5 14.5" />
    </svg>`,
    color: "bg-accent-blue"
  },
  {
    title: "UrnGuard",
    description: "Policy enforcement, access controls, and audit logging. Built-in compliance framework with SOC2 ready controls.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    color: "bg-signal-green"
  },
  {
    title: "UrnBench",
    description: "Comprehensive evaluation and telemetry suite. Performance metrics, A/B testing, and ROI tracking.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l-1-3m1 3l-1-3m-16.5-3h16.5" />
    </svg>`,
    color: "bg-purple-600"
  },
  {
    title: "UrnVault",
    description: "RAG with data lineage tracking. Vector databases, knowledge graphs, and semantic search capabilities.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
    </svg>`,
    color: "bg-orange-600"
  },
  {
    title: "UrnServe",
    description: "Intelligent model routing and serving. Load balancing, failover, and cost optimization across providers.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3V6a3 3 0 013-3h13.5a3 3 0 013 3v5.25a3 3 0 01-3 3m-16.5 0a3 3 0 003 3h13.5a3 3 0 003-3m-16.5 0h16.5" />
    </svg>`,
    color: "bg-indigo-600"
  }
];
---

<BaseLayout
  title="Platform Overview"
  description="Enterprise AI agent platform with deterministic workflows, governance controls, and measurable outcomes."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-hero-pattern">
    <div class="absolute inset-0 bg-gradient-to-r from-accent-blue/10 to-signal-green/10"></div>
    <div class="relative mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
      <div class="mx-auto max-w-4xl text-center">
        <h1 class="text-4xl font-bold tracking-tight sm:text-6xl lg:text-7xl">
          Enterprise AI Agent <span class="bg-gradient-to-r from-accent-blue to-signal-green bg-clip-text text-transparent">Platform</span>
        </h1>
        <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-gray-300 sm:text-xl">
          Build deterministic workflows with governance-first architecture. Complete observability, policy enforcement, and ROI tracking built-in.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            href="/contact"
            class="rounded-md bg-accent-blue px-8 py-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-blue transition-colors"
          >
            Book Demo
          </a>
          <a
            href="/pricing"
            class="text-sm font-semibold leading-6 text-white hover:text-accent-blue transition-colors"
          >
            View Pricing <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Architecture Overview -->
  <section class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:text-center">
        <h2 class="text-base font-semibold leading-7 text-accent-blue">How it works</h2>
        <p class="mt-2 text-3xl font-bold tracking-tight sm:text-4xl">
          4-Stage Deterministic Pipeline
        </p>
      </div>
      
      <div class="mx-auto mt-16 max-w-5xl">
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
          <div class="flex flex-col items-center text-center">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-accent-blue mb-4">
              <span class="text-xl font-bold text-white">1</span>
            </div>
            <h3 class="text-lg font-semibold mb-2">Ingest</h3>
            <p class="text-sm text-gray-300">Data validation and preprocessing with schema enforcement</p>
          </div>
          <div class="flex flex-col items-center text-center">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-signal-green mb-4">
              <span class="text-xl font-bold text-white">2</span>
            </div>
            <h3 class="text-lg font-semibold mb-2">Ground</h3>
            <p class="text-sm text-gray-300">Context retrieval and knowledge augmentation</p>
          </div>
          <div class="flex flex-col items-center text-center">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-purple-600 mb-4">
              <span class="text-xl font-bold text-white">3</span>
            </div>
            <h3 class="text-lg font-semibold mb-2">Plan</h3>
            <p class="text-sm text-gray-300">Multi-step reasoning with governance checks</p>
          </div>
          <div class="flex flex-col items-center text-center">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-orange-600 mb-4">
              <span class="text-xl font-bold text-white">4</span>
            </div>
            <h3 class="text-lg font-semibold mb-2">Act & Verify</h3>
            <p class="text-sm text-gray-300">Execution with real-time monitoring and validation</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Platform Components -->
  <section class="py-24 sm:py-32 bg-gray-900">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <p class="text-base font-semibold leading-7 text-accent-blue">Integrated Suite</p>
        <h2 class="mt-2 text-3xl font-bold tracking-tight sm:text-4xl">Platform Components</h2>
      </div>
      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
          {platformFeatures.map((feature) => (
            <div class="flex flex-col">
              <dt class="flex items-center gap-x-3 text-base font-semibold leading-7">
                <div class={`h-10 w-10 flex items-center justify-center rounded-lg ${feature.color}`}>
                  <Fragment set:html={feature.icon} />
                </div>
                {feature.title}
              </dt>
              <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-300">
                <p class="flex-auto">{feature.description}</p>
              </dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </section>

  <!-- Security Section -->
  <section class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:text-center">
        <h2 class="text-base font-semibold leading-7 text-accent-blue">Security</h2>
        <p class="mt-2 text-3xl font-bold tracking-tight sm:text-4xl">
          Enterprise-Grade Security
        </p>
        <p class="mt-6 text-lg leading-8 text-gray-300">
          Built for compliance from day one with comprehensive audit trails and access controls.
        </p>
      </div>
      
      <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-6 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8">
        <div class="bg-gray-900 p-8 rounded-lg border border-gray-800">
          <h3 class="text-lg font-semibold mb-4">Data Residency</h3>
          <p class="text-gray-300">Choose your deployment region. On-premises and private cloud options available.</p>
        </div>
        <div class="bg-gray-900 p-8 rounded-lg border border-gray-800">
          <h3 class="text-lg font-semibold mb-4">Access Control</h3>
          <p class="text-gray-300">Fine-grained RBAC with SSO integration. Audit every action and decision.</p>
        </div>
        <div class="bg-gray-900 p-8 rounded-lg border border-gray-800">
          <h3 class="text-lg font-semibold mb-4">Compliance</h3>
          <p class="text-gray-300">SOC2 Type II ready. GDPR, HIPAA, and industry-specific compliance frameworks.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-accent-blue/10 to-signal-green/10">
    <div class="px-6 py-24 sm:px-6 sm:py-32 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
          Ready to build deterministic AI workflows?
        </h2>
        <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-300">
          Start with a discovery sprint to map your automation opportunities.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6 flex-wrap">
          <a
            href="/contact"
            class="rounded-md bg-accent-blue px-8 py-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-blue transition-colors"
          >
            Book Discovery Sprint
          </a>
          <a
            href="https://docs.urnlabs.ai"
            class="text-sm font-semibold leading-6 text-white hover:text-accent-blue transition-colors"
          >
            View Documentation <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>