---
import { skillCategories, getTopSkills } from '../data/skills.ts';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from './ui/card';
import Icon from './ui/Icon.astro';

const topSkills = getTopSkills(8);
---

<section id="skills" class="py-20 px-4 sm:px-6 lg:px-8 bg-white dark:bg-slate-900 scroll-mt-20">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center justify-center w-12 h-12 bg-brand-100 dark:bg-brand-900/20 rounded-lg mb-6">
        <Icon name="brain" class="text-brand-600 dark:text-brand-400" size="lg" />
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Technical Expertise
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Specialized in AI engineering, platform architecture, and intelligent automation with hands-on experience across the full technology stack.
      </p>
    </div>

    <!-- Top Skills Overview -->
    <div class="mb-16">
      <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-8 text-center">
        Core Competencies
      </h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {topSkills.map((skill) => (
          <div class="relative group">
            <div class="absolute inset-0 bg-gradient-to-r from-brand-500 to-brand-600 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform scale-105"></div>
            <Card className="relative group-hover:border-brand-300 dark:group-hover:border-brand-600 transition-all duration-300">
              <CardContent className="p-6 text-center">
                <div class="inline-flex items-center justify-center w-12 h-12 bg-brand-100 dark:bg-brand-900/20 rounded-lg mb-4">
                  <Icon name={skill.icon} class="text-brand-600 dark:text-brand-400" size="lg" />
                </div>
                <h4 class="font-semibold text-gray-900 dark:text-white mb-2">{skill.name}</h4>
                <div class="w-full bg-gray-200 dark:bg-slate-700 rounded-full h-2 mb-2">
                  <div 
                    class="bg-gradient-to-r from-brand-500 to-brand-600 h-2 rounded-full transition-all duration-500"
                    style={`width: ${skill.levelPercentage}%`}
                  ></div>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-gray-600 dark:text-gray-400">{skill.level}</span>
                  <span class="text-brand-600 dark:text-brand-400 font-medium">{skill.levelPercentage}%</span>
                </div>
                {skill.yearsOfExperience && (
                  <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                    {skill.yearsOfExperience}+ years
                  </p>
                )}
              </CardContent>
            </Card>
          </div>
        ))}
      </div>
    </div>

    <!-- Skill Categories -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {skillCategories.map((category) => (
        <Card className="hover:shadow-lg transition-all duration-300">
          <CardHeader>
            <div class="flex items-center gap-3 mb-2">
              <div class="inline-flex items-center justify-center w-10 h-10 bg-brand-100 dark:bg-brand-900/20 rounded-lg">
                <Icon name={category.icon} class="text-brand-600 dark:text-brand-400" size="md" />
              </div>
              <div>
                <CardTitle className="text-xl font-bold text-gray-900 dark:text-white">
                  {category.name}
                </CardTitle>
                <CardDescription className="text-sm text-gray-600 dark:text-gray-300">
                  {category.description}
                </CardDescription>
              </div>
            </div>
          </CardHeader>

          <CardContent>
            <div class="space-y-4">
              {category.skills.map((skill) => (
                <div class="group">
                  <div class="flex items-center justify-between mb-2">
                    <div class="flex items-center gap-2">
                      <Icon name={skill.icon} class="text-brand-600 dark:text-brand-400" size="sm" />
                      <span class="font-medium text-gray-900 dark:text-white">{skill.name}</span>
                      {skill.yearsOfExperience && (
                        <span class="text-xs text-gray-500 dark:text-gray-400 ml-auto">
                          {skill.yearsOfExperience}y
                        </span>
                      )}
                    </div>
                    <div class="flex items-center gap-2">
                      <span class={`text-xs px-2 py-1 rounded-full font-medium ${
                        skill.level === 'expert' 
                          ? 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400'
                          : skill.level === 'advanced'
                          ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400'
                          : skill.level === 'intermediate'
                          ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400'
                          : 'bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-400'
                      }`}>
                        {skill.level}
                      </span>
                      <span class="text-sm text-brand-600 dark:text-brand-400 font-medium min-w-[3rem] text-right">
                        {skill.levelPercentage}%
                      </span>
                    </div>
                  </div>
                  
                  <div class="w-full bg-gray-200 dark:bg-slate-700 rounded-full h-2 mb-1">
                    <div 
                      class="bg-gradient-to-r from-brand-500 to-brand-600 h-2 rounded-full transition-all duration-700 ease-out"
                      style={`width: ${skill.levelPercentage}%`}
                    ></div>
                  </div>
                  
                  {skill.description && (
                    <p class="text-xs text-gray-600 dark:text-gray-400 mt-1 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      {skill.description}
                    </p>
                  )}
                  
                  {skill.projects && skill.projects.length > 0 && (
                    <div class="mt-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      <div class="flex flex-wrap gap-1">
                        {skill.projects.slice(0, 3).map((project) => (
                          <span class="inline-flex px-2 py-0.5 text-xs font-medium bg-brand-50 dark:bg-brand-900/10 text-brand-700 dark:text-brand-300 rounded">
                            {project}
                          </span>
                        ))}
                        {skill.projects.length > 3 && (
                          <span class="inline-flex px-2 py-0.5 text-xs font-medium bg-gray-50 dark:bg-slate-800 text-gray-600 dark:text-gray-400 rounded">
                            +{skill.projects.length - 3}
                          </span>
                        )}
                      </div>
                    </div>
                  )}
                </div>
              ))}
            </div>
          </CardContent>
        </Card>
      ))}
    </div>

    <!-- Certifications & Learning -->
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-8">
        Continuous Learning
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <Card className="bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/20 border-purple-200 dark:border-purple-700">
          <CardContent className="p-6 text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-purple-500 text-white rounded-lg mb-4">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 dark:text-white mb-2">AI Research</h4>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Staying current with latest AI advancements and research papers
            </p>
          </CardContent>
        </Card>

        <Card className="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 border-blue-200 dark:border-blue-700">
          <CardContent className="p-6 text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-500 text-white rounded-lg mb-4">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Open Source</h4>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Contributing to AI tools and platform architecture projects
            </p>
          </CardContent>
        </Card>

        <Card className="bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 border-green-200 dark:border-green-700">
          <CardContent className="p-6 text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-green-500 text-white rounded-lg mb-4">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Community</h4>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Active in AI engineering communities and knowledge sharing
            </p>
          </CardContent>
        </Card>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="mt-16 text-center">
      <p class="text-gray-600 dark:text-gray-300 mb-6">
        Ready to leverage these skills for your next project?
      </p>
      <a
        href="#contact"
        class="inline-flex items-center justify-center h-11 rounded-md px-8 bg-primary text-primary-foreground hover:bg-primary/90 font-medium transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        Start a Conversation
      </a>
    </div>
  </div>
</section>